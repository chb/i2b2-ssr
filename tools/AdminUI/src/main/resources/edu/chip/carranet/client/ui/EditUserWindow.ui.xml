<ui:UiBinder
        xmlns:ui='urn:ui:com.google.gwt.uibinder'
        xmlns:g='urn:import:com.google.gwt.user.client.ui'
        xmlns:c='urn:import:edu.chip.carranet.client.ui'>

    <g:HTMLPanel>
        <g:PopupPanel modal="false"
                      animationEnabled="true" ui:field="editUserPopup">

            <g:HTMLPanel>
                <g:Label text="Select studies">Select the User's Studies</g:Label>
                <g:HorizontalPanel>
                    <g:VerticalPanel>
                        <g:ListBox ui:field="userStudyField" multipleSelect="true" width="260px"/>
                        <g:Label text="Select homesite"/>
                        <g:ListBox width="259px" name="homeSiteSelector" ui:field="homeSiteListBox"/>


                    </g:VerticalPanel>
                    <g:VerticalPanel>
                        <g:CheckBox ui:field="isAdmin" text="admin"/>
                        <g:CheckBox ui:field="isPDO" text="PDO Queries"/>
                        <g:CheckBox ui:field="isSiteBreakdownEnabled" text="Site Identifed PDO"/>
                    </g:VerticalPanel>
                </g:HorizontalPanel>

                <g:HorizontalPanel>
                    <g:Button ui:field="updateUserButton" text="Update"/>
                    <g:Button ui:field="cancelButton" text="Cancel"/>
                </g:HorizontalPanel>
            </g:HTMLPanel>
        </g:PopupPanel>
    </g:HTMLPanel>


</ui:UiBinder>
