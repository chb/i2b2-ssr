<ui:UiBinder
        xmlns:ui='urn:ui:com.google.gwt.uibinder'
        xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <g:HTMLPanel>
        <g:PopupPanel modal="false"
                      animationEnabled="true" ui:field="updateMachinePopup">

            <g:HTMLPanel>
                <g:Label ui:field="machineName"/>
                <g:Label text="Hostname"/>
                <g:TextBox ui:field="hostnameField"/>
                <g:Button ui:field="submitUpdatedMachine" text="Submit"/>
                <g:Button ui:field="cancel" text="Cancel"/>
            </g:HTMLPanel>
        </g:PopupPanel>
    </g:HTMLPanel>


</ui:UiBinder>