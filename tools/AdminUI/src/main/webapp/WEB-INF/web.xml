<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>GWT-Maven-Archetype</display-name>

    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>/WEB-INF/applicationContext.xml</param-value>
    </context-param>

    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>


    <servlet>
        <servlet-name>core</servlet-name>
        <servlet-class>com.sun.jersey.spi.spring.container.servlet.SpringServlet</servlet-class>
        <init-param>
            <param-name>com.sun.jersey.config.property.packages</param-name>
            <param-value>edu.chip.carranet</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>core</servlet-name>
        <url-pattern>/rest/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>authorization</servlet-name>
        <servlet-class>
            edu.chip.carranet.server.AuthServiceImpl
        </servlet-class>
    </servlet>

    <servlet>
        <servlet-name>ols</servlet-name>
        <servlet-class>
            edu.chip.carranet.server.StudyManagementServiceImpl
        </servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>authorization</servlet-name>
        <url-pattern>/edu.chip.carranet.Application/authorization</url-pattern>
    </servlet-mapping>


    <servlet-mapping>
        <servlet-name>ols</servlet-name>
        <url-pattern>/edu.chip.carranet.Application/ols</url-pattern>
    </servlet-mapping>


    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>