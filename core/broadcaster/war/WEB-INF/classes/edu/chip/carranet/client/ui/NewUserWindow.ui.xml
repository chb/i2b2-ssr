<ui:UiBinder
        xmlns:ui='urn:ui:com.google.gwt.uibinder'
        xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <g:HTMLPanel>
        <g:PopupPanel modal="false"
                      animationEnabled="true" ui:field="newUserPopup">

            <g:HTMLPanel>
                <g:HorizontalPanel>
                    <g:VerticalPanel>
                        <g:Label text="Username" ui:field="usernameLabel"/>
                        <g:TextBox ui:field="userNameField"/>
                        <g:Label text="Password" ui:field="passwordLabel"/>
                        <g:TextBox ui:field="passwordField"/>
                        <g:Label text="Password Again"/>
                        <g:TextBox ui:field="passwordAgainField"/>
                        <g:HTMLPanel>
                            <table border="0" cellpadding="0">
                                <tr>
                                    <td align="LEFT">
                                        <g:Button ui:field="submitNewUser" text="Submit"/>
                                    </td>
                                    <td align="LEFT">
                                        <g:Button ui:field="cancel" text="Cancel"/>
                                    </td>
                                </tr>
                            </table>

                        </g:HTMLPanel>
                    </g:VerticalPanel>
                    <g:VerticalPanel>
                        <g:CheckBox ui:field="isAdmin" text="admin"/>
                        <g:CheckBox ui:field="isPDO" text="PDO Queries"/>
                        <g:CheckBox ui:field="isSiteIdentifiable" text="Site Identifed PDO"/>
                    </g:VerticalPanel>

                </g:HorizontalPanel>

            </g:HTMLPanel>
        </g:PopupPanel>
    </g:HTMLPanel>


</ui:UiBinder>
